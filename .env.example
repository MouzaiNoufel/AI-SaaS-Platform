# ===========================================
# AI SaaS Platform Environment Configuration
# ===========================================

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="AI SaaS Platform"

# Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/ai_saas_db?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secure-jwt-secret-key-min-32-chars"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key"
JWT_REFRESH_EXPIRES_IN="30d"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="AI SaaS Platform <noreply@yourdomain.com>"

# AI Provider Configuration
# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_ORG_ID="org-your-org-id"
OPENAI_MODEL="gpt-4-turbo-preview"

# AI Settings
AI_MOCK_MODE=true
AI_REQUEST_TIMEOUT=60000
AI_MAX_TOKENS=4096

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_PER_MINUTE=10

# User Limits
DEFAULT_DAILY_AI_LIMIT=50
PREMIUM_DAILY_AI_LIMIT=500

# Security
BCRYPT_SALT_ROUNDS=12
CSRF_SECRET="your-csrf-secret-key"

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Redis (Optional - for production caching)
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL="info"
ENABLE_AUDIT_LOG=true

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_WEBSOCKETS=false

# Admin Configuration
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="SecureAdminPassword123!"
